<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:trees="http://schemas.android.com/apk/res/com.trees.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <TextView 
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="设置中心"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#8866ff66"
        android:gravity="center"
        />
 	<com.trees.mobilesafe.view.SettingItemView
 	    android:id="@+id/siv"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	trees:title="设置自动更新"
    	trees:update_off="自动更新已经关闭"
    	trees:update_on="自动更新已经开启"
     />
 	 <com.trees.mobilesafe.view.SettingItemView
 	    android:id="@+id/siv_showaddress"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	trees:title="设置归属地显示"
    	trees:update_off="归属地显示已经关闭"
    	trees:update_on="归属地显示已经开启"
     />
 	 <com.trees.mobilesafe.view.SettingClickView 
 	     android:layout_width="wrap_content"
 	     android:layout_height="wrap_content"
 	     android:id="@+id/scv_changebg"
 	     />
 	 	 <com.trees.mobilesafe.view.SettingClickView 
 	     android:layout_width="wrap_content"
 	     android:layout_height="wrap_content"
 	     android:id="@+id/scv_changeposition"
 	     />
 	 <com.trees.mobilesafe.view.SettingItemView
 	    android:id="@+id/siv_blacknumber"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	trees:title="设置黑名单拦截"
    	trees:update_off="黑名单拦截已经关闭"
    	trees:update_on="黑名单拦截已经开启"
     />
</LinearLayout>
